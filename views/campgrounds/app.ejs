<%- include("../partials/header") %>
<h4><%= currentUser %></h4>
<div class="container">
    <header class="jumbotron">
        <div class="container">
        <h1>Welcome to our camping</h1>
        <p>This website is to collect all the camping places from all over the world</p>
        <p>
            <a class="btn btn-primary btn-lg" href="/campground/new">adding new camp ground into it</a>
        </p>
        </div>
    </header>
<div display="inline-flex" class="row flex match-to-row" width=100% padding-top=100px>
    <% camps.forEach(function(camp){ %>
        <div class="col-lg-4 col-sm-6">
            <a href = "#" class = "thumbnail">                
                <img src="<%= camp.image %>" width=100%, min-height=100px>
            </a>
                <div class="caption"><h4><%= camp.name %></h4></div>
                <p>
                    <a href="/campgrounds/<%=camp._id %> " class="btn btn-primary">MORE INFO</a>
                </p>
        </div>
    <% }); %>
</div>
</div>
<%- include("../partials/footer") %>
